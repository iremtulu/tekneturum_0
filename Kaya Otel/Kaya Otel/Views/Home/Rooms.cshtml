<h2>Odalarımız</h2>
<div class="row">
    @foreach (var room in Model)
    {
        <div class="col-md-4 fade-in mb-4">
            <div class="card shadow-sm h-100">
                <img src="~/NewFolder/resim.jpg" class="card-img-top" alt="@room.Name" style="width:100%; height: 250px;" />
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@room.Name</h5>
                    <p class="card-text">
                        Kapasite: @room.Capacity Kişi <br />
                        Fiyat: @room.Price TL
                    </p>
                    <a asp-controller="Reservation" asp-action="Detay" asp-route-id="@room.Id" class="btn btn-outline-primary mt-auto">Detay</a>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .navbar .btn-rooms {
        background-color: transparent;
        border: 2px solid white;
        color: white;
        border-radius: 25px;
        padding: 6px 15px;
        font-weight: bold;
        transition: all 0.3s ease;
    }

    .navbar .btn-rooms:hover {
        background-color: white;
        color: #2a9ec5;
    }

    .fade-in {
        animation: fadeIn 1s ease-in;
    }

    
</style>
