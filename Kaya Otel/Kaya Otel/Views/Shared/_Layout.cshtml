

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kaya_Otel</title>

    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav id="navbar" class="navbar navbar-expand-sm navbar-light bg-white shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand me-4" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logotekne.jpg" alt="Kaya Tekne" style="height:40px;">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Tour" asp-action="Index">Turlar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Contact">İletişim</a>
                        </li>
                    </ul>
                    <div class="d-flex gap-2">
                        <a class="btn btn-outline-primary" asp-controller="Admin" asp-action="AdminLogin">Admin</a>
                        <a class="btn btn-outline-secondary" asp-controller="Account" asp-action="Login">Kullanıcı</a>
                        <a class="btn btn-primary" asp-controller="Tour" asp-action="Index">Rezervasyon</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-0">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted py-3">
        <div class="container">
            &copy; 2025 - Kekova-Tour - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
