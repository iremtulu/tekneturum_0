@model Kaya_Otel.Models.Tour

@{
    ViewData["Title"] = "Yeni Tur";
}

<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h1 class="h4 mb-4">Yeni Tur Oluştur</h1>
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                @TempData["SuccessMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }
                        <form asp-action="CreateTour" method="post" enctype="multipart/form-data" class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Name" class="form-label">Tur Adı *</label>
                                <input asp-for="Name" class="form-control" required />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Category" class="form-label">Kategori</label>
                                <input asp-for="Category" class="form-control" placeholder="Sunset, Mehtap..." />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="PricePerPerson" class="form-label">Tur Fiyatı (₺) *</label>
                                <input asp-for="PricePerPerson" type="number" step="0.01" class="form-control" required />
                                <span asp-validation-for="PricePerPerson" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Capacity" class="form-label">Kapasite *</label>
                                <input asp-for="Capacity" type="number" class="form-control" required />
                                <span asp-validation-for="Capacity" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label for="DurationHours" class="form-label">Süre (saat)</label>
                                <input type="number" id="DurationHours" name="DurationHours" class="form-control" placeholder="4" min="0" step="0.5" value="@(Model.Duration.TotalHours > 0 ? Model.Duration.TotalHours : 4)" />
                                <small class="text-muted">Sadece saat sayısını girin (örn: 4, 4.5, 7)</small>
                            </div>
                            <div class="col-md-6">
                                <label for="imageFile" class="form-label">Tur Resmi</label>
                                <input type="file" id="imageFile" name="imageFile" accept="image/*" class="form-control" />
                                <small class="text-muted">JPG, PNG veya GIF formatında resim yükleyebilirsiniz</small>
                            </div>
                            <div class="col-12">
                                <label asp-for="ImageUrl" class="form-label">Veya Resim URL'si</label>
                                <input asp-for="ImageUrl" class="form-control" placeholder="/images/tour.jpg" />
                                <small class="text-muted">Resim yüklemezseniz URL kullanabilirsiniz</small>
                            </div>
                            <div class="col-12">
                                <label asp-for="Description" class="form-label"></label>
                                <textarea asp-for="Description" rows="4" class="form-control"></textarea>
                            </div>
                            <div class="col-12 form-check">
                                <input asp-for="IsActive" class="form-check-input" checked />
                                <label asp-for="IsActive" class="form-check-label">Aktif</label>
                            </div>
                            <div class="col-12 d-flex justify-content-between">
                                <a asp-action="Tours" class="btn btn-outline-secondary">Geri</a>
                                <button type="submit" class="btn btn-primary">Kaydet</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<partial name="_ValidationScriptsPartial" />

