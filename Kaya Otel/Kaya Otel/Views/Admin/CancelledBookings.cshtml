@model IEnumerable<Kaya_Otel.Models.CancelledBooking>

@{
    ViewData["Title"] = "İptal Edilen Rezervasyonlar";
}

<section class="py-5">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h4 mb-0">İptal Edilen Rezervasyonlar</h1>
            <a asp-action="Bookings" class="btn btn-outline-primary">
                <i class="bi bi-arrow-left"></i> Aktif Rezervasyonlara Dön
            </a>
        </div>
        @if (!Model.Any())
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> İptal edilen rezervasyon bulunmamaktadır.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped align-middle">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Tur</th>
                            <th>Tarih</th>
                            <th>Müşteri</th>
                            <th>Telefon</th>
                            <th>Kişi</th>
                            <th>İptal Tarihi</th>
                            <th>İptal Eden</th>
                            <th>Sebep</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var booking in Model)
                        {
                            <tr>
                                <td>@booking.OriginalBookingId</td>
                                <td>@booking.TourName</td>
                                <td>@booking.TourDate.ToString("dd MMM yyyy")</td>
                                <td>@booking.CustomerName</td>
                                <td><a href="tel:@booking.Phone">@booking.Phone</a></td>
                                <td>@booking.Guests</td>
                                <td>@booking.CancelledAt.ToString("dd MMM yyyy HH:mm")</td>
                                <td><span class="badge bg-secondary">@(booking.CancelledBy ?? "Bilinmiyor")</span></td>
                                <td>
                                    <small class="text-muted">@(booking.CancellationReason ?? "-")</small>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</section>

