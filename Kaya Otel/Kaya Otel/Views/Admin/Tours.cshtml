@model IEnumerable<Kaya_Otel.Models.Tour>

@{
    ViewData["Title"] = "Tur Yönetimi";
}

<section class="py-5">
    <div class="container">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h4 mb-0">Aktif Turlar</h1>
            <div class="d-flex gap-2">
                <a asp-action="DeletedTours" class="btn btn-outline-secondary">
                    <i class="bi bi-trash"></i> Silinen Turlar
                </a>
                <a asp-action="CreateTour" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Yeni Tur Ekle
                </a>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Ad</th>
                        <th>Kategori</th>
                        <th>Fiyat</th>
                        <th>Kapasite</th>
                        <th>Durum</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tour in Model)
                    {
                        <tr>
                            <td>@tour.Name</td>
                            <td>@tour.Category</td>
                            <td>@tour.PricePerPerson.ToString("C0")</td>
                            <td>@tour.Capacity</td>
                            <td>
                                @if (tour.IsActive)
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Pasif</span>
                                }
                            </td>
                            <td class="text-end">
                                <a asp-action="EditTour" asp-route-id="@tour.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil"></i> Düzenle
                                </a>
                                <form asp-action="RemoveTour" asp-route-id="@tour.Id" method="post" style="display: inline;"
                                      onsubmit="return confirm('Bu turu silmek istediğinizden emin misiniz? Tur silinecek ancak veritabanında kalacaktır.');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Sil
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

