@model IEnumerable<Kaya_Otel.Models.Payment>
@{
    ViewData["Title"] = "Ödemeler";
    var bookings = ViewBag.Bookings as IEnumerable<Kaya_Otel.Models.Booking>;
}

<section class="py-5">
    <div class="container">
        <h1 class="h4 mb-4">Kapora Ödemeleri</h1>
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Tur</th>
                        <th>Müşteri</th>
                        <th>Tutar</th>
                        <th>Sağlayıcı</th>
                        <th>Durum</th>
                        <th>Tarih</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var payment in Model)
                    {
                        var booking = bookings?.FirstOrDefault(b => b.Id == payment.BookingId);
                        <tr>
                            <td>@payment.Id</td>
                            <td>@booking?.TourName</td>
                            <td>@booking?.CustomerName</td>
                            <td>@payment.Amount.ToString("C0")</td>
                            <td>@payment.Provider</td>
                            <td><span class="badge bg-success">@payment.Status</span></td>
                            <td>@payment.PaidAt.ToLocalTime().ToString("dd MMM yyyy HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

