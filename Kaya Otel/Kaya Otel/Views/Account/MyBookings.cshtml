@model IEnumerable<Kaya_Otel.Models.Booking>

@{
    ViewData["Title"] = "Rezervasyonlarım";
}

<section class="py-5">
    <div class="container">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h4 mb-0">Rezervasyonlarım</h1>
            <a asp-action="CancelledBookings" class="btn btn-outline-secondary">
                <i class="bi bi-x-circle"></i> İptal Edilen Rezervasyonlar
            </a>
        </div>
        
        @if (!Model.Any())
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> Henüz rezervasyonunuz bulunmamaktadır.
                <a asp-controller="Tour" asp-action="Index" class="alert-link">Turları görüntüleyip rezervasyon yapabilirsiniz.</a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped align-middle">
                    <thead>
                        <tr>
                            <th>Tur Adı</th>
                            <th>Tarih</th>
                            <th>Kişi Sayısı</th>
                            <th>Tur Fiyatı</th>
                            <th>Kapora</th>
                            <th>Ödeme Durumu</th>
                            <th>Rezervasyon Tarihi</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var booking in Model)
                        {
                            <tr>
                                <td><strong>@booking.TourName</strong></td>
                                <td>@booking.TourDate.ToString("dd MMM yyyy")</td>
                                <td>@booking.Guests kişi</td>
                                <td>@booking.TotalAmount.ToString("C0")</td>
                                <td>@booking.DepositAmount.ToString("C0")</td>
                                <td>
                                    @if (booking.IsDepositPaid)
                                    {
                                        <span class="badge bg-success">Kapora ödendi</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">Ödeme bekleniyor</span>
                                    }
                                </td>
                                <td>@booking.CreatedAt.ToString("dd MMM yyyy HH:mm")</td>
                                <td class="text-end">
                                    <div class="d-flex gap-2 justify-content-end flex-wrap">
                                        <button type="button" class="btn btn-sm btn-outline-primary" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#bookingModal"
                                                onclick="loadBookingDetails(@booking.Id)">
                                            <i class="bi bi-eye"></i> Detay
                                        </button>
                                        
                                        @{
                                            // Tur yapıldı kontrolü: Tur tarihi bugünden küçük veya eşitse (gece yarısı geçişine göre)
                                            var isTourPastOrToday = booking.TourDate.Date <= DateTime.Today.Date;
                                        }
                                        
                                        @if (isTourPastOrToday)
                                        {
                                            <span class="badge bg-secondary text-white">
                                                <i class="bi bi-check-circle"></i> Tur Yapıldı
                                            </span>
                                        }
                                        else
                                        {
                                            @* Güncelleme butonu - sadece iptal talebi yoksa ve güncelleme talebi yoksa görünsün *@
                                            @if (booking.UpdateRequested && booking.UpdateRequestStatus == "Pending")
                                            {
                                                <span class="badge bg-info text-white">
                                                    <i class="bi bi-clock-history"></i> Güncelleme Talebi Bekleniyor
                                                </span>
                                            }
                                            else if (!booking.CancellationRequested && booking.IsDepositPaid)
                                            {
                                                <a asp-action="EditBooking" asp-route-id="@booking.Id" class="btn btn-sm btn-outline-success">
                                                    <i class="bi bi-pencil-square"></i> Rezervasyon Düzenle
                                                </a>
                                            }
                                            
                                            @* İptal butonu - güncelleme talebi yoksa görünsün *@
                                            @if (booking.CancellationRequested)
                                            {
                                                <span class="badge bg-warning text-dark me-2">
                                                    <i class="bi bi-clock-history"></i> İptal Talebi Bekleniyor
                                                </span>
                                                <form asp-action="CancelCancellationRequest" method="post" style="display: inline;">
                                                    <input type="hidden" name="id" value="@booking.Id" />
                                                    <button type="submit" class="btn btn-sm btn-outline-secondary" 
                                                            onclick="return confirm('İptal talebinizden vazgeçmek istediğinizden emin misiniz?');">
                                                        <i class="bi bi-x-circle"></i> Vazgeç
                                                    </button>
                                                </form>
                                            }
                                            else if (!booking.UpdateRequested)
                                            {
                                                <button type="button" class="btn btn-sm btn-outline-warning" 
                                                        data-bs-toggle="modal" 
                                                        data-bs-target="#cancelRequestModal"
                                                        data-booking-id="@booking.Id">
                                                    <i class="bi bi-send"></i> İptal Talebi Gönder
                                                </button>
                                            }
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</section>

<!-- Rezervasyon Detay Modal -->
<div class="modal fade" id="bookingModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div id="bookingDetailsContent">
                <!-- İçerik AJAX ile yüklenecek -->
            </div>
        </div>
    </div>
</div>

<!-- İptal Talebi Modal -->
<div class="modal fade" id="cancelRequestModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title">İptal Talebi Gönder</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="cancelRequestForm" method="post">
                <div class="modal-body">
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> İptal talebiniz admin tarafından onaylandıktan sonra rezervasyonunuz iptal edilecektir.
                    </div>
                    <div class="mb-3">
                        <label for="cancellationReason" class="form-label">İptal Nedeni <span class="text-danger">*</span></label>
                        <textarea id="cancellationReason" name="reason" class="form-control" rows="4" required placeholder="İptal nedeninizi açıklayın..."></textarea>
                        <small class="text-muted">Lütfen iptal nedeninizi detaylı olarak belirtin.</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Vazgeç</button>
                    <button type="submit" class="btn btn-warning">
                        <i class="bi bi-send"></i> Talebi Gönder
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function loadBookingDetails(bookingId) {
            $.get('@Url.Action("BookingDetails", "Account")', { id: bookingId, isCancelled: false }, function(data) {
                $('#bookingDetailsContent').html(data);
            });
        }
        
        // İptal talebi modal için
        var cancelRequestModal = document.getElementById('cancelRequestModal');
        if (cancelRequestModal) {
            cancelRequestModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                var bookingId = button.getAttribute('data-booking-id');
                var form = document.getElementById('cancelRequestForm');
                form.action = '@Url.Action("RequestCancellation", "Account")?id=' + bookingId;
                document.getElementById('cancellationReason').value = '';
            });
        }
    </script>
}

