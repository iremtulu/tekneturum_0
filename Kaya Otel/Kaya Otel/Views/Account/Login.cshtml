@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>

        html, body {
            height: 100%;
            margin: 0;
            
            font-family: Arial, sans-serif;
        }

        /* Login formunu ortalamak için alan */
        .login-container {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            position: absolute;
            left: 0;
            top: 0;
            height: 100%;
            width: 100%
        }
        .login-form {
            background-color: darkturquoise;
            padding: 30px;
            border-radius: 10px;
          
            width: 300px;
            text-align:center;
            z-index:11;
        }

            .login-form input[type="text"],
            .login-form input[type="password"] {
                width: 100%;
                padding: 10px;
                margin: 10px 0;
                border-radius: 5px;
                border: 1px solid #ccc;
            }

            .login-form button {
                padding: 10px 20px;
                border: none;
                background-color: #007bff;
                color: white;
                border-radius: 5px;
                cursor: pointer;
                width: 100%;
            }
  .login-form button:hover {
                    background-color: #0056b3;
                }
        footer {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            background-color: cornflowerblue;
            text-align: center;
            padding: 10px 0;
            z-index: 10;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <form class="login-form" asp-controller="Home" asp-action="Index" method="post">
            <h2>Kullanıcı Girişi</h2>
            <input type="text" name="Username" placeholder="Kullanıcı Adı" required />
            <input type="password" name="Password" placeholder="Şifre" required />
            <button type="submit">Giriş Yap</button>
        </form>
    </div>

    <footer>
        &copy; 2025 - Kaya_Otel - <a asp-area="" asp-controller="Home" asp-action="Privacy" style="color: inherit; text-decoration: none;">Privacy</a>
    </footer>
</body>
</html>
